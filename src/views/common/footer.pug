footer.footer
  .footer__row
    .footer__row-separation
      - 
        var footer__menu = [
          ['Мои работы', './works.html'],
          ['Обо мне', './about.html'],
          ['Блог', './blog.html'],
          ['Авторизация', './index.html']
        ]
      nav.footer__nav
        ul.footer__menu
         each item in footer__menu
          li.footer__menu-item
            a(href=`${item[1]}`).footer__menu-link #{item[0]}
            
    .footer__row-separation.footer__row-separation__right
      - 
        var footer__socials = [
          ['vk', 'http://vk.com'],
          ['github', 'http://gh.com'],
          ['in', 'http://in.com']
        ]
      ul.footer__socials
        each item in footer__socials
          li.footer__socials-item
            a(href=`${item[1]}`).footer__socials-link
              +icon(item[0], 'socials__link-icon')
  .footer__row
