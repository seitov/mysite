include ./common/_mixins
block variables

doctype html
html(lang="ru")
  head
    meta(charset="utf-8")
    meta(content="ie=edge" http-equiv="x-ua-compatible")
    meta(content="width=device-width, initial-scale=1" name="viewport")
    
    title Portfolio | #{title}
    link(rel='stylesheet' href='main.min.css')
    link(rel="icon" href="./assets/images/favicon.ico" type="image/x-icon")
    script(src="http://code.jquery.com/jquery-3.3.1.js")
    script(src="https://api-maps.yandex.ru/2.1/?lang=ru_RU" type="text/javascript")
  body
    include ./common/preloader.pug 
    .wrapper
      .maincontent
        block content
        include ./common/humburger-btn.pug 

      include ./common/humburger-overlay.pug
      include ./common/footer.pug

    include ./components/entry.pug

    script(src='bootloader.bundle.js')
    script(src='vendor.bundle.js')

    block scripts
